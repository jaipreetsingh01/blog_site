
<% include ./partials/header %>

<div class="ui raised very padded text container segment">

<div class="ui header">Update Blog</div>

<form class="ui form" action="/blogs/<%= blogs._id %>?_method=PUT" method="POST">
            <div class="field">
            <label>Title</label>
             <input type="text" name="title" value="<%= blogs.title %>">
            </div>
            
             <div class="field">
            <label>Image</label>
              <input type="text" name="image" value="<%= blogs.image %>">   
            </div>
            
             <div class="field">
            <label>Content</label>
            <textarea name="content"><%= blogs.content %> </textarea>
            </div>
     
      
      <input class="ui basic violet button" type="submit">
      
</div>      
      
</form>      

<% include ./partials/footer %>
